#page-wrapper {
    margin-top: 30px;
}

:host {
.cursor-pointer{
    cursor: pointer;
}

/deep/ {
.dropper {
    position: relative;
    height: 100px;
    width: 100%;
    text-align: center;
    vertical-align: middle;
    line-height: 90px;
    border: dotted 3px;
    background-color: rgba(129, 207, 247, 0.2);
}

.dropper > * {
    pointer-events: none;
}

.dropper.drag-over {
    background-color: rgba(144, 255, 90, 0.2) !important;
}

.dropper.loading {
    background-color: rgba(255, 181, 68, 0.2) !important;
}

.dropper.error {
    color: #531717;
    background-color: rgba(255, 90, 71, 0.2) !important;
}

.dropper .loading-label {
    position: relative;
    height: 50px;
    width: 100%;
    top: 50%;
    left: 0;
    margin-top: -25px;
//margin-left: -150px;
    padding-left: 140px;
}

.dropper .loading-label i {
    position: absolute;
    left: 50px;
    top: 5px;
    font-size: 40px;
}

.dropper .loading-label p {
    text-align: left;
    width: 100%;
    margin: 0;
    line-height: 25px;
}

.dropper > p {
    margin: 0;

> i {
    position: relative;
    font-size: 40px;
    margin-right: 30px;
    top: 7px;
}
}
}
}