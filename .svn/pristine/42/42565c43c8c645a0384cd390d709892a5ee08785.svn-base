<features name="${project.features.repo}-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">

    <repository>mvn:org.apache.karaf.cave/apache-karaf-cave/4.1.0/xml/features</repository>

    <feature name='katexec' description='IDFOR Solutions KAT Executor' version='${project.version}'>
        <details>IDFOR Solutions KAT Executor Feature - Used to schedule and execute Talend jobs</details>

        <bundle>mvn:org.apache.servicemix.specs/org.apache.servicemix.specs.jsr339-api-2.0.1/2.9.0</bundle>
        <bundle>mvn:joda-time/joda-time/2.9.4</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.4.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.4.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.4.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-base/2.4.6</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-json-provider/2.4.6</bundle>
        <bundle>mvn:com.idfor.kat.tools/katexecbundle/${project.version}</bundle>
        <bundle>mvn:org.apache.cxf/cxf-rt-rs-security-cors/${cxf.security.cors}</bundle>

        <feature version="[4.0.7,5)">scheduler</feature>
        <feature version="[1.1,2)">transaction-api</feature>
        <feature version="[3.1.1,4)">cxf</feature>

        <configfile finalname="${karaf.etc}/com.idfor.kat.tools.katexec.cfg" override="false">
            mvn:com.idfor.kat.tools/katexecbundle/${project.version}/cfg/katexec
        </configfile>
        <configfile finalname="${karaf.etc}/org.apache.felix.fileinstall-katexec.cfg" override="true">
            mvn:com.idfor.kat.tools/katexecbundle/${project.version}/cfg/felix
        </configfile>
        <configfile finalname="${karaf.etc}/branding.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
        <configfile finalname="${karaf.etc}/branding-ssh.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
    </feature>

    <feature name='katfrontend' description='IDFOR Solutions KAT Frontend' version='${project.version}'>
        <details>IDFOR Solutions KAT Frontend Feature - KAT UI administration</details>

        <bundle>mvn:com.idfor.kat.tools/katfrontendbundle/${project.version}</bundle>

        <feature version="[4.0.10,5)">http</feature>
        <feature version="[4.0.10,5)">http-whiteboard</feature>

        <configfile finalname="${karaf.etc}/branding.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
        <configfile finalname="${karaf.etc}/branding-ssh.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
    </feature>

    <feature name='katbackend' description='IDFOR Solutions KAT Backend' version='${project.version}'>
        <details>IDFOR Solutions KAT Backend Feature - KAT UI administration</details>

        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.6.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.6.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.6.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-base/2.6.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-json-provider/2.6.3</bundle>
        <bundle>mvn:com.idfor.kat.tools/katbackend/${project.version}</bundle>
        <bundle>mvn:org.apache.cxf/cxf-rt-rs-security-cors/${cxf.security.cors}</bundle>
        <feature version="[3.1.1,4)">cxf</feature>

        <configfile finalname="${karaf.etc}/branding.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
        <configfile finalname="${karaf.etc}/branding-ssh.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
        <configfile finalname="${karaf.etc}/com.idfor.kat.tools.katbackend.cfg" override="false">
            mvn:com.idfor.kat.tools/katbackend/${project.version}/cfg/katbackend
        </configfile>
    </feature>

    <feature name='katjobmanager' description='IDFOR Solutions KAT Job Manage' version='${project.version}'>
        <details>IDFOR Solutions KAT Job Manager Feature - KAT Job Deployment Tool</details>

        <feature>cave-deployer</feature>

        <bundle>mvn:com.idfor.kat.tools/katjobmanagerbundle/${project.version}</bundle>
        <bundle>mvn:org.apache.cxf/cxf-rt-rs-security-cors/${cxf.security.cors}</bundle>

        <configfile finalname="${karaf.etc}/com.idfor.kat.tools.katjobmanager.cfg" override="false">
            mvn:com.idfor.kat.tools/katjobmanagerbundle/${project.version}/cfg/katjobmanager
        </configfile>
        <configfile finalname="${karaf.etc}/branding.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
        <configfile finalname="${karaf.etc}/branding-ssh.properties" override="true">
            mvn:com.idfor.kat.tools/katbranding/${project.version}/properties/branding
        </configfile>
    </feature>

</features>