<main>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-12 display-inline">
                <h2 class="page-header">Configuration > Profiles / Rights</h2>
            </div>
        </div>

        <accordion>

            <accordion-group heading="Groupe">
                <user-right-group [contextGroups]="contextGroups"></user-right-group>
            </accordion-group>

<!--            <accordion-group heading="Role">
                <user-right-role></user-right-role>
            </accordion-group>-->



            <accordion-group heading="Context group">
                <user-right-context-group #userContextGroup [contextGroups]="contextGroups" [contexts]="contexts" (contextGroupUpdater)="updateContextGroup(contextGroups)"></user-right-context-group>
            </accordion-group>

            <accordion-group heading="Context">
                <user-right-context [contexts]="contexts" (contextUpdater)="updateContextList(contexts)"></user-right-context>
            </accordion-group>

        </accordion>
    </div>
</main>
