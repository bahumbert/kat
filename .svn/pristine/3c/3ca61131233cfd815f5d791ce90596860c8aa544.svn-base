:host {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  font-family: Verdana, Arial, sans-serif;

  #kat-logo {
    text-align: center;
    margin: 45px 0 52px 0;

    > img {
      margin-left: -35px;
    }
  }

  form[name="login"] {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 350px;
    height: 500px;

    margin: -275px 0 0 -175px;
    padding: 18px 30px;

    background-color: #FFF;
    border-radius: 10px;

    -webkit-box-shadow: 2px 2px 10px 0 rgba(0,0,0,0.5);
    -moz-box-shadow: 2px 2px 10px 0 rgba(0,0,0,0.5);
    box-shadow: 2px 2px 10px 0 rgba(0,0,0,0.5);

    > h2 {
      display: block;
      text-align: center;
      padding: 0;
      margin: 12px 0 30px 0;
      font-size: 24px;
      text-transform: uppercase;
      color: #424242;
      letter-spacing: 1px;
    }

    > .pretty-input {
      position: relative;
      display: block;

      input {
        padding: 10px 5px 10px 25px;
        font-size: 14px;

        border-top: none;
        border-left: none;
        border-right: none;
        border-bottom-width: 2px;
        border-radius: 0;
        box-shadow: none;

        transition: border-bottom-color 350ms ease;
      }

      input#input-usr:focus,
      input#input-pwd:focus {
        border-color: #1BA0C8;
        outline: 0;
        -webkit-box-shadow: none;
        box-shadow: none;
      }

      input#input-pwd:focus {
        border-color: #FF7F2A;
      }

      > i.fa {
        position: absolute;
        bottom: 11px;
        left: 5px;
        color: #b2b2b2;
        font-size: 14px;
        transition: color 350ms ease;
        pointer-events: none;
      }

      > .placeholder {
        position: absolute;
        bottom: 8px;
        left: 25px;
        font-size: 14px;
        color: #b2b2b2;
        transition: bottom 350ms ease, color 350ms ease;
        pointer-events: none;
      }
    }

    > .pretty-input.focused {
      > i.fa-user {
        color: #1BA0C8;
      }
      > i.fa-lock {
        color: #FF7F2A;
      }
      > .placeholder {
        bottom: 35px;
        color: #3d3d3d;
      }
    }

    > .pretty-input + .pretty-input {
      margin-top: 40px;
    }

    .btn {
      display: block;
      margin-top: 50px;
    }
  }
}
